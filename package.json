{
    "name": "command-palette",
    "description": "命令面板, 快捷调用HBuilderX命令菜单、第三方插件命令菜单等",
    "displayName": "命令面板",
    "version": "0.0.1",
    "publisher": "OneOne",
    "engines": {
        "HBuilderX": "^2.7.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./extension",
    "activationEvents": [
        "*"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.commandPalette",
                "title": "命令面板"
            }
        ],
        "menus": {
            "menubar/tool": [
                {
                    "group": "z_commands"
                },
                {
                    "command": "extension.commandPalette",
                    "title": "命令面板",
                    "group": "z_commands"
                }
            ]
        },
        "configuration": {
            "title": "命令面板 - command-palette",
            "properties": {
                "commandPalette.isCheckUpdate": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否检查更新"
                },
                "commandPalette.isShowThirdPluginCommand": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否显示非HBuilderX官方插件(即插件市场插件)外的功能列表"
                }
            }
        }
    },
    "extensionDependencies": [
        "plugin-manager"
    ],
    "dependencies": {
        "json-comments": "^0.2.1"
    }
}
